<div class="max-w-md mx-auto bg-white p-6 rounded-xl shadow-md mt-6">
  <h2 class="text-2xl font-bold mb-6 text-gray-800">📈 体重記録の登録</h2>

  <%= form_with model: @weight_record do |f| %>
    <div class="mb-4">
      <%= f.label :weight, "体重（kg）", class: "block text-gray-700 font-semibold mb-1" %>
      <%= f.number_field :weight, step: 0.1, class: "w-full border border-gray-300 rounded-md p-2" %>
    </div>

    <div class="mb-6">
      <%= f.label :recorded_on, "記録日", class: "block text-gray-700 font-semibold mb-1" %>
      <%= f.date_field :recorded_on, value: Date.today, class: "w-full border border-gray-300 rounded-md p-2" %>
    </div>

    <div class="flex items-center justify-between">
      <%= f.submit '記録する', class: "bg-blue-600 text-white font-semibold py-2 px-4 rounded-md hover:bg-blue-700" %>
      <%= link_to "一覧へ戻る", weight_records_path, class: "text-blue-600 hover:underline text-sm" %>
    </div>
  <% end %>

  <% if @weight_record.errors.any? %>
    <div class="bg-red-100 text-red-700 mt-6 p-4 rounded-md">
      <p class="font-semibold mb-2">入力エラーがあります：</p>
      <ul class="list-disc list-inside text-sm">
        <% @weight_record.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
