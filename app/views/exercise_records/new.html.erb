<div class="max-w-xl mx-auto px-4 py-6">
  <!-- 見出し -->
  <h2 class="text-2xl font-bold text-gray-800 mb-6">🏃‍♂️ 運動記録の登録</h2>

  <!-- フォーム -->
  <div class="bg-white shadow-md rounded-xl p-6 space-y-4">
    <%= form_with model: @exercise_record do |f| %>
      <div>
        <%= f.label :recorded_on, '📅 日付', class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.date_field :recorded_on, value: Date.today, class: "w-full border-gray-300 rounded-md shadow-sm" %>
      </div>

      <div>
        <%= f.label :activity, '🏋️‍♀️ 運動の種類（例：ウォーキング、筋トレ）', class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.text_field :activity, class: "w-full border-gray-300 rounded-md shadow-sm" %>
      </div>

      <div>
        <%= f.label :duration, '⏱ 時間（分）', class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.number_field :duration, class: "w-full border-gray-300 rounded-md shadow-sm" %>
      </div>

      <div>
        <%= f.label :calories_burned, '🔥 消費カロリー（kcal）', class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.number_field :calories_burned, class: "w-full border-gray-300 rounded-md shadow-sm" %>
      </div>

      <div>
        <%= f.submit '記録する', class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-md" %>
      </div>
    <% end %>

    <!-- 一覧リンク -->
    <%= link_to '← 一覧に戻る', exercise_records_path, class: "inline-block text-blue-600 hover:underline text-sm mt-2" %>
  </div>

  <!-- エラーメッセージ -->
  <% if @exercise_record.errors.any? %>
    <div class="mt-4 bg-red-100 text-red-700 p-4 rounded-md">
      <p class="font-semibold mb-2">エラーがあります：</p>
      <ul class="list-disc list-inside text-sm">
        <% @exercise_record.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
