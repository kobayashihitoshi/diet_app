<div class="max-w-xl mx-auto mt-10 p-6 bg-white shadow-md rounded-2xl">
  <h2 class="text-2xl font-bold mb-6 text-center text-gray-800">ユーザー情報の編集</h2>

  <%= form_with(model: @user, local: true) do |f| %>
    <% if @user.errors.any? %>
      <div class="mb-4 p-4 bg-red-100 text-red-700 rounded-md">
        <h3 class="font-semibold mb-2"><%= pluralize(@user.errors.count, "件のエラー") %>があります:</h3>
        <ul class="list-disc list-inside">
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :name, "氏名", class: "block font-medium mb-1" %>
      <%= f.text_field :name, class: "w-full border border-gray-300 rounded-md p-2 focus:ring focus:ring-blue-200" %>
    </div>

    <div class="mb-4">
      <%= f.label :email, "メールアドレス", class: "block font-medium mb-1" %>
      <%= f.email_field :email, class: "w-full border border-gray-300 rounded-md p-2 focus:ring focus:ring-blue-200" %>
    </div>

    <div class="mb-4">
      <%= f.label :weight, "現在の体重 (kg)", class: "block font-medium mb-1" %>
      <%= f.number_field :weight, step: 0.1, class: "w-full border border-gray-300 rounded-md p-2 focus:ring focus:ring-blue-200" %>
    </div>

    <div class="mb-4">
      <%= f.label :target_weight, "目標体重 (kg)", class: "block font-medium mb-1" %>
      <%= f.number_field :target_weight, step: 0.1, class: "w-full border border-gray-300 rounded-md p-2 focus:ring focus:ring-blue-200" %>
    </div>

    <div class="mb-4">
      <%= f.label :age, "年齢", class: "block font-medium mb-1" %>
      <%= f.number_field :age, class: "w-full border border-gray-300 rounded-md p-2 focus:ring focus:ring-blue-200" %>
    </div>

    <div class="mb-6">
      <%= f.label :gender, "性別", class: "block font-medium mb-1" %>
      <%= f.select :gender, [["男性", "male"], ["女性", "female"], ["その他", "other"]], {}, class: "w-full border border-gray-300 rounded-md p-2 bg-white focus:ring focus:ring-blue-200" %>
    </div>

    <div class="text-center">
      <%= f.submit "更新", class: "px-6 py-2 bg-blue-500 text-white rounded-xl hover:bg-blue-600 transition" %>
    </div>
  <% end %>
</div>
